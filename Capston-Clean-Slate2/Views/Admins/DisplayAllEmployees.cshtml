@model IEnumerable<Capston_Clean_Slate2.Models.Employee>

@{
    ViewBag.Title = "DisplayAllEmployees";
}
<style>
    .buttonAdjust {
        font-size: .9em !important;
    }
    .table-hover tbody tr{
        transition-property: background;
        transition-duration: 400ms;
    }

    .table-hover tbody tr:hover{
        background: aqua !important;
        font-weight: 600;
    }
</style>
<div class="col-12">
    <h2 class="card-body" style="border:solid; border-color: whitesmoke; border-width: thin; border-radius: 20px;color:whitesmoke; background-color: #008CBA; text-align: center; margin-bottom: 4px; width: 100% !important; font-weight: 500; text-decoration:underline">Current Employees</h2>
</div>

@*<table class="table">*@
<div class="col-lg-12 col-md-12 col-sm-12">
    <div class="card text-white bg-info mb-3" style="width: 100%; border-radius: 20px; border-color: #f8f9fa;">
        <div class="card-header navbar navbar-collapse bg-primary" style="border-radius: 20px 20px 0px 0px; border-bottom-color: #f8f9fa; border-bottom-width:thin; padding-right: 5px;">
            <div class="row" style="white-space: nowrap">
                <div class="text-white" style="font-size: 1.2em; font-weight:700; padding-left: 15px; padding-right: 15px; border-right: solid; border-right-color: whitesmoke; border-right-width: thin; padding-top: 14px; padding-bottom: 10px;">
                    My Account
                </div>
                <div class="btn btn-primary" style="border-color: #008CBA; border-radius: 15px; display:inline-block;">
                    <a class="nav-link" href="~/Employees/Edit" data-toggle="tooltip" data-delay='{"show":"1500", "hide":"200"}' data-placement="bottom" title="Edit My Profile" data-type="info" style="padding-left: 5px !important; padding-right: 5px !important; margin-left: 5px;">
                        <div class="text-white" style="text-align: center;">Edit Profile</div>
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body" style="white-space: nowrap;" data-simplebar>
            <table id="bootstrap-data-table" class="table table-striped table-bordered table-hover">
                <tr class="thead-dark">
                    <th>
                        @Html.DisplayNameFor(model => model.FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.VacationDayBalance)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PersonalDayBalance)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UnexcusedDaysOff)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsHourlyEmployee)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EmployeeHourlyPayRate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EmployeeSalaryPayRate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DirectDeposit)
                    </th>
                    <th></th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.VacationDayBalance)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PersonalDayBalance)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UnexcusedDaysOff)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsHourlyEmployee)
                        </td>
                        @if (item.IsHourlyEmployee)
                        {
                            <td>
                                $@Html.DisplayFor(modelItem => item.EmployeeHourlyPayRate)
                            </td>
                            <td>N/A</td>
                        }
                        else if (!item.IsHourlyEmployee)
                        {
                            <td>N/A</td>
                            <td>
                                $@Html.DisplayFor(modelItem => item.EmployeeSalaryPayRate)
                            </td>
                        }
                        <td>
                            @Html.DisplayFor(modelItem => item.DirectDeposit)
                        </td>
                        <td>
                            @Html.ActionLink("Add Tax Deduction", "AddEmployeeDeductions", new { id = item.Id }, new { @class = "btn btn-success buttonAdjust" })
                        </td>
                        <td>
                            @Html.ActionLink("Delete Employee", "Delete", "Employees", new { id = item.Id }, new { @class = "btn btn-danger buttonAdjust" })
                        </td>
                    </tr>
                }
            </table>

            @Html.ActionLink("View Time Off Requests", "DisplayDayOffRequests", "Employees", new { }, new { @class = "btn btn-primary" })<br />
        </div>
        <br /><br /><br />
    </div>
</div>