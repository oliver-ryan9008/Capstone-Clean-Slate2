@model Capston_Clean_Slate2.Models.Employee

@{
    ViewBag.Title = "EmployeeHome";
}


<div class="col-lg-12 col-md-12 col-sm-12">
    <div class="card text-white mb-3" style="white-space: nowrap; background-color: rgba(173, 235, 185, .6); height: 100%">
        <div class="card-header navbar navbar-collapse bg-secondary" style="max-height: 4rem !important; width:100%">
            <div class="row" style="white-space: nowrap;">
                <div class="text-white navbar-brand" style=" border-right: solid; border-right-color: whitesmoke; border-right-width: thin; padding-right: 1.5rem; padding-left: 1rem;">
                    My Account
                </div>
                <div class="btn btn-outline-warning" style="margin-left: 1rem; margin-top: 0px !important; margin-bottom: 0px !important; padding-bottom: 0px !important; padding-top: 0px !important;">
                    <a class="nav-link" href="~/Employees/Edit" data-toggle="tooltip" data-delay='{"show":"1500", "hide":"200"}' data-placement="bottom" title="Edit My Profile" data-type="info" style="margin-left: 5px;">
                        <div class="text-white" style="text-align: center;">Edit</div>
                    </a>
                </div>
            </div>
        </div>
        
        <div class="card-body text-secondary" id="card-body">
            <div class="col-lg-12">
                <div class="col-12 mx-auto">
                    <dl class="card-body" style="background-color: #e9edf0; border: solid; border-color: #1591C2; border-width:thin; border-radius:6px; margin-top:1rem; margin-bottom: -.3rem;">
                        <dt class="card-font-bold">
                            Full Name
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.FirstName)&nbsp;@Html.DisplayFor(model => model.LastName)
                        </dd>

                        @*<dt class="card-font-bold">
                        @Html.DisplayNameFor(model => model.LastName)
                    </dt>*@

                        @*<dd class="text-hoverable">
                        @Html.DisplayFor(model => model.LastName)
                    </dd>*@

                        <dt class="card-font-bold">
                            @Html.DisplayNameFor(model => model.VacationDayBalance)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.VacationDayBalance)
                        </dd>

                        <dt class="card-font-bold">
                            @Html.DisplayNameFor(model => model.PersonalDayBalance)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.PersonalDayBalance)
                        </dd>

                        <dt class="card-font-bold">
                            @Html.DisplayNameFor(model => model.UnexcusedDaysOff)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.UnexcusedDaysOff)
                        </dd>

                        <dt class="card-font-bold">
                            @Html.DisplayNameFor(model => model.HoursWorked)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.HoursWorked)
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>
