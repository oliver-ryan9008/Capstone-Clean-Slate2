@model IEnumerable<Capston_Clean_Slate2.Models.Employee>

@Html.AntiForgeryToken()

<table id="bootstrap-data-table" class="table table-striped table-bordered">
    <tr>
        <th>
            Employee
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RequestDatesToString)
        </th>
        <th></th>
    </tr>
    @if (Model.Count() != 0)
    {
        foreach (var employee in Model)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => employee.FirstName)&nbsp;@Html.DisplayFor(modelItem => employee.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => employee.RequestDatesToString)
                </td>
                <td>
                    @Html.ActionLink("Choose whether to approve this request", "ApproveSpecificDayGroup", new { id = employee.Id }, new { @class = "btn btn-info" })
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td>
                N/A
            </td>
            <td>
                Currently no requests to display.
            </td>
        </tr>
    }
</table>

